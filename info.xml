<?xml version="1.0"?>
<extension key="com.osseed.payment.worldline" type="module">
  <file>worldline</file>
  <name>Worldline Payment Processor</name>
  <description>Payment processor for worldline payment.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>OSSeed</author>
    <email>hello@osseed.com</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/osseed/com.osseed.payment.worldline</url>
    <url desc="Documentation">https://github.com/osseed/com.osseed.payment.worldline/blob/master/README.md</url>
    <url desc="Support">https://github.com/osseed/com.osseed.payment.worldline/issues</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2015-05-25</releaseDate>
  <version>1.0</version>
  <develStage>alpha</develStage>
  <compatibility>
    <ver>5.0</ver>
  </compatibility>
  <comments>This is a new, undeveloped module</comments>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <typeInfo>
    <userNameLabel>Merchant ID</userNameLabel>
    <signatureLabel>Secret Key</signatureLabel>
    <urlSiteDefault>https://payment.direct.worldline-solutions.com/v2/</urlSiteDefault>
    <urlSiteTestDefault>https://payment.preprod.direct.worldline-solutions.com/v2/</urlSiteTestDefault>
    <billingMode>notify</billingMode>
    <paymentType>1</paymentType>
    <isRecur>0</isRecur>
  </typeInfo>
  <civix>
    <namespace>CRM/Worldline</namespace>
    <format>22.05.2</format>
    <angularModule>crmWorldline</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
  </mixins>
</extension>
